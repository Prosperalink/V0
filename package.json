    "next": "^15.4.1",
    "pexels": "^1.4.0",
    "postcss": "^8.4.38",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^3.4.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/jest": "^30.0.0",
